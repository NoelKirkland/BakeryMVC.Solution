@{
  Layout = "_Layout";
}
@using Bakery.Models;

<h1>Here are all the orders for @Model["vendor"].Name:</h1>

@if (@Model["vendor"].Id == 0)
{
  <h3>No orders have been added yet!</h3>
}

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><h4><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></h4></li>
}
</ol>
<p><a href='/vendors/@Model["vendor"].Id/order/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>