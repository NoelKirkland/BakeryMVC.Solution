@{
  Layout = "_Layout";
}
@using Bakery.Models;

<h1>Vendors Page</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
}

<p><a href='/vendors/new'>Add new vendor</a></p>
<p><a href='/'>Back home</a></p>